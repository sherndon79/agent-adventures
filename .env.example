# Agent Adventures Environment Configuration

# =========================
# LLM API Keys
# =========================

# Anthropic Claude API
ANTHROPIC_API_KEY=your_claude_api_key_here

# OpenAI GPT API
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API
GOOGLE_API_KEY=your_gemini_api_key_here

# =========================
# Platform Integration
# =========================

# Twitch API
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_ACCESS_TOKEN=your_twitch_access_token

# YouTube Data API
YOUTUBE_API_KEY=your_youtube_api_key_here

# =========================
# Isaac Sim MCP Configuration
# =========================

# Isaac Sim host and port
ISAAC_SIM_HOST=localhost
ISAAC_SIM_PORT=8765

# MCP service endpoints
WORLDBUILDER_MCP_URL=ws://localhost:8765/worldbuilder
WORLDVIEWER_MCP_URL=ws://localhost:8765/worldviewer
WORLDSURVEYOR_MCP_URL=ws://localhost:8765/worldsurveyor
WORLDSTREAMER_MCP_URL=ws://localhost:8765/worldstreamer

# =========================
# Streaming Configuration
# =========================

# OME (Open Media Engine) settings
OME_HOST=localhost
OME_PORT=1935
OME_APP_NAME=agent_adventures

# Streaming URLs
RTMP_TWITCH_URL=rtmp://live.twitch.tv/live/
RTMP_YOUTUBE_URL=rtmp://a.rtmp.youtube.com/live2/

# Stream keys (add your actual stream keys)
TWITCH_STREAM_KEY=your_twitch_stream_key
YOUTUBE_STREAM_KEY=your_youtube_stream_key

# =========================
# Application Configuration
# =========================

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=true

# Performance
MAX_CONCURRENT_AGENTS=10
PROPOSAL_TIMEOUT_MS=10000
JUDGE_PANEL_TIMEOUT_MS=15000

# Token optimization
MAX_TOKENS_PER_PROPOSAL=100
MAX_TOKENS_PER_DECISION=50
ENABLE_TOKEN_TRACKING=true

# =========================
# Database (if needed)
# =========================

# Story state persistence
DATABASE_URL=sqlite:./data/agent_adventures.db

# Redis for caching (optional)
REDIS_URL=redis://localhost:6379

# =========================
# Security
# =========================

# API rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS settings for web interfaces
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =========================
# Development/Testing
# =========================

# Mock mode for development without Isaac Sim
MOCK_MCP_MODE=true
MOCK_LLM_MODE=true
MOCK_STREAMING_MODE=true

# Test configuration
RUN_INTEGRATION_TESTS=false
TEST_TIMEOUT_MS=30000